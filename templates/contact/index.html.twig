{% extends 'base.html.twig' %}

{% block title %}Lista uzytkowników{% endblock %}

{% block body %}
<div class="container mx-auto px-4 mt-20">
    <h1 class="mb-8 text-2xl font-extrabold leading-none tracking-tight text-gray-900 md:text-3xl lg:text-4xl">Lista uzytkowników</h1>

    <div class="flex flex-col">
        <div>
            <div class="p-1.5 min-w-full inline-block align-middle">
                <div class="border rounded-lg overflow-hidden dark:border-gray-700 dark:shadow-gray-900  overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
                        <thead class="bg-gray-500">
                            <tr>
                                <th scope="col" class="px-6 py-3 text-start text-xs font-medium text-black uppercase">#</th>
                                <th scope="col" class="px-6 py-3 text-start text-xs font-medium text-black uppercase">Imię</th>
                                <th scope="col" class="px-6 py-3 text-start text-xs font-medium text-black uppercase">Nazwisko</th>
                                <th scope="col" class="px-6 py-3 text-start text-xs font-medium text-black uppercase">Adres Email</th>
                                <th scope="col" class="px-6 py-3 text-start text-xs font-medium text-black uppercase">Numer telefonu</th>
                                <th scope="col" class="px-6 py-3 text-start text-xs font-medium text-black uppercase">Adres url pliku</th>
                                <th scope="col" class="px-6 py-3 text-start text-xs font-medium text-black uppercase">Akcje</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
                            {% for row in csvData %}
                                <tr>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-black">{{ loop.index }}</td>
                                    {% for column in row %}
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-black">{{ column }}</td>
                                    {% endfor %}
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-black">
                                        <a class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800" href="{{ path('contact_edit', { 'id': loop.index }) }}">Edytuj</a>
                                        <a class="focus:outline-none text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900" href="{{ path('contact_delete', { 'id': loop.index }) }}" onclick="return confirm('Czy na pewno chcesz usunąć ten kontakt?')">Usuń</a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                 <div class="mt-8 flex justify-between">
                    <a class="focus:outline-none text-white bg-green-700 hover:bg-green-800 focus:ring-4 focus:ring-green-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-800" href="{{ path('contact_add') }}">Dodaj nowego uzytkownika</a>
                    <a href="/contacts.csv" download="contacts.csv" class="text-gray-900 bg-white border border-gray-300 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-100 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2">Pobierz plik CSV</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}